{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2021-08-01-preview",
            "name": "name",
            "location": "westeurope",
            "tags": {
                "billingIdentifier": "SogetiLab",
                "displayName": "SQLDB",
                "environmentType": "DEV",
                "projectName": "Brand Reputation Prototype"
            },
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 5
            },
            "kind": "v12.0,user",
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": 2147483648,
                "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
                "zoneRedundant": false,
                "readScale": "Disabled",
                "requestedBackupStorageRedundancy": "Local",
                "maintenanceConfigurationId": "/subscriptions/3f26cf74-4de5-43d8-9c14-945c5594b176/providers/Microsoft.Maintenance/publicMaintenanceConfigurations/SQL_Default",
                "isLedgerOn": false
            },
            "resources": [
                {
                    "type": "Microsoft.Sql/servers/databases/backupLongTermRetentionPolicies",
                    "apiVersion": "2021-08-01-preview",
                    "name": "[concat(parameters('servers_sogeti_sql_brandreputation_d_name'), '/sogeti-sqldb1-brandreputation-d/default')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/databases', parameters('servers_sogeti_sql_brandreputation_d_name'), 'sogeti-sqldb1-brandreputation-d')]",
                        "[resourceId('Microsoft.Sql/servers', parameters('servers_sogeti_sql_brandreputation_d_name'))]"
                    ],
                    "properties": {
                        "weeklyRetention": "PT0S",
                        "monthlyRetention": "PT0S",
                        "yearlyRetention": "PT0S",
                        "weekOfYear": 0
                    }
                },
                {
                    "type": "Microsoft.Sql/servers/databases/backupShortTermRetentionPolicies",
                    "apiVersion": "2021-08-01-preview",
                    "name": "[concat(parameters('servers_sogeti_sql_brandreputation_d_name'), '/sogeti-sqldb1-brandreputation-d/default')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/databases', parameters('servers_sogeti_sql_brandreputation_d_name'), 'sogeti-sqldb1-brandreputation-d')]",
                        "[resourceId('Microsoft.Sql/servers', parameters('servers_sogeti_sql_brandreputation_d_name'))]"
                    ],
                    "properties": {
                        "retentionDays": 7,
                        "diffBackupIntervalInHours": 24
                    }
                },
                {
                    "type": "Microsoft.Sql/servers/databases/ledgerDigestUploads",
                    "apiVersion": "2021-08-01-preview",
                    "name": "[concat(parameters('servers_sogeti_sql_brandreputation_d_name'), '/sogeti-sqldb1-brandreputation-d/Current')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/databases', parameters('servers_sogeti_sql_brandreputation_d_name'), 'sogeti-sqldb1-brandreputation-d')]",
                        "[resourceId('Microsoft.Sql/servers', parameters('servers_sogeti_sql_brandreputation_d_name'))]"
                    ],
                    "properties": {}
                },
                {
                    "type": "Microsoft.Sql/servers/databases/transparentDataEncryption",
                    "apiVersion": "2021-08-01-preview",
                    "name": "[concat(parameters('servers_sogeti_sql_brandreputation_d_name'), '/sogeti-sqldb1-brandreputation-d/Current')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers/databases', parameters('servers_sogeti_sql_brandreputation_d_name'), 'sogeti-sqldb1-brandreputation-d')]",
                        "[resourceId('Microsoft.Sql/servers', parameters('servers_sogeti_sql_brandreputation_d_name'))]"
                    ],
                    "properties": {
                        "state": "Enabled"
                    }
                }
            ]
        }
    ]
}