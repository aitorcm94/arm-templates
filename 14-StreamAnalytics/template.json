{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.5.0.0",
    "parameters": {
        "StreamAnalyticsName": {
            "type": "String",
            "defaultValue": "sogeti-asa-brandreputation-d",
            "metadata": {
                "description": "Stream Analytics Job Name, can contain alphanumeric characters and hypen and must be 3-63 characters long."
            }
        },
        "location": {
            "type": "String",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location of the Azure Stream Analytics."
            }
        },
        "sku": {
            "type": "String",
            "defaultValue": "standard",
            "metadata": {
                "description": "The name of the SKU. Required on PUT (CreateOrReplace) requests."
            }
        },
        "numberOfStreamingUnits": {
            "type": "int",
            "defaultValue": 1,
            "minValue": 1,
            "maxValue": 48,
            "allowedValues": [
                1,
                3,
                6,
                12,
                18,
                24,
                30,
                36,
                42,
                48
            ],
            "metadata": {
                "description": "Number of Streaming Units"
            }
        },
        "jobType": {
            "type": "String",
            "defaultValue": "Cloud",
            "allowedValues": [
                "Cloud",
                "Edge"
            ],
            "metadata": {
                "description": "Describes the type of the job. Valid modes are Cloud and 'Edge'."
            }
        },
        "contentStoragePolicy": {
            "type": "String",
            "defaultValue": "SystemAccount",
            "allowedValues": [
                "SystemAccount",
                "JobStorageAccount"
            ],
            "metadata": {
                "description": "Valid values are JobStorageAccount and SystemAccount. If set to JobStorageAccount, this requires the user to also specify jobStorageAccount property."
            }
        },
        "compatibilityLevel": {
            "type": "String",
            "defaultValue": "1.2",
            "allowedValues": [
                "1.0",
                "1.2"
            ],
            "metadata": {
                "description": "Controls certain runtime behaviors of the streaming job."
            }
        },
        "inputName": {
            "type": "String",
            "defaultValue": "TwitterStream",
            "metadata": {
                "description": "Name of the Azure Stream Analytics Input."
            }
        },
        "outputNameOne": {
            "type": "String",
            "defaultValue": "EvHubOut",
            "metadata": {
                "description": "Name of the Azure Stream Analytics Output."
            }
        },
        "outputNameTwo": {
            "type": "String",
            "defaultValue": "TwitterADLS2",
            "metadata": {
                "description": "Name of the Azure Stream Analytics Output."
            }
        },
        "jobStorageAccount": {
            "type": "Object",
            "defaultValue": {
                "value": {
                    "accountName": "",
                    "accountKey": ""
                }
            },
            "metadata": {
                "description": "The properties that are associated with an Azure Storage account with MSI"
            }
        },
        "query": {
            "type": "String",
            "defaultValue": "SELECT *\r\nINTO TwitterADLS2\r\nFROM TwitterStream\r\n\r\nSELECT\r\n    id,\r\n    text,\r\n    [user].screen_name\r\nINTO EvHubOut\r\nFROM TwitterStream",
            "metadata": {
                "description": "Specifies the query that will be run in the streaming job. You can learn more about the Stream Analytics Query Language (SAQL) here: https://msdn.microsoft.com/library/azure/dn834998 . Required on PUT (CreateOrReplace) requests."
            }
        },
        "identity": {
            "type": "Object",
            "defaultValue": {
                "type": "SystemAssigned"
            },
            "metadata": {
                "description": "Describes how identity is verified."
            }
        },
        "serviceBusNamespace": {
            "type": "String",
            "defaultValue": "sogeti-evhn-brandreputation-d",
            "metadata": {
                "description": "Namespace of the Event Hub."
            }
        },
        "inputEventHubName": {
            "type": "String",
            "defaultValue": "sogeti-evh-brandreputation-d",
            "metadata": {
                "description": "Event Hub name for input."
            }
        },
       "inputConsumerGroupName": {
            "type": "String",
            "defaultValue": "twitter",
            "metadata": {
                "description": "Event Hub consumer group for input."
            }
        },
        "outputEventHubName": {
            "type": "String",
            "defaultValue": "sogeti-evh-uncompressed-brandreputation-d",
            "metadata": {
                "description": "Event Hub name for input."
            }
        },
        "dataLakeStorageAccount": {
            "type": "String",
            "defaultValue": "sogetistbrandreputationd",
            "metadata": {
                "description": "Data Lake Storage Account for output."
            }
        },
        "containerStorageAccount": {
            "type": "String",
            "defaultValue": "twitter",
            "metadata": {
                "description": "Container Name of the Storage Account."
            }
        },
        "tagDisplayName": {
            "type": "string",
            "defaultValue": "ASA",
            "metadata": {
                "description": "Tag for the Display Name."
            }
        },
        "tagEnvironmentType": {
            "type": "string",
            "defaultValue": "DEV",
            "metadata": {
                "description": "Tag for the Environment Type."
            }
        },
        "tagProjectName": {
            "type": "string",
            "defaultValue": "Brand Reputation Prototype",
            "metadata": {
                "description": "Tag for the Project Name."
            }
        },
        "tagBillingIdentifier": {
            "type": "string",
            "defaultValue": "SogetiLab",
            "metadata": {
                "description": "Tag for the Billing Identifier."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.StreamAnalytics/StreamingJobs",
            "apiVersion": "2017-04-01-preview",
            "name": "[parameters('StreamAnalyticsName')]",
            "location": "[parameters('location')]",
            "identity": "[parameters('identity')]",
            "tags": {
                "displayName": "[parameters('tagDisplayName')]",
                "environmentType": "[parameters('tagEnvironmentType')]",
                "projectName": "[parameters('tagProjectName')]",
                "billingIdentifier": "[parameters('tagBillingIdentifier')]"
            },
            "properties": {
                "sku": {
                    "name": "[parameters('sku')]"
                },
                "eventsOutOfOrderPolicy": "Adjust",
                "outputErrorPolicy": "Stop",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "jobType": "[parameters('jobType')]",
                "contentStoragePolicy": "[parameters('contentStoragePolicy')]",
                "compatibilityLevel": "[parameters('compatibilityLevel')]",
                "dataLocale": "en-US",
                "transformation": {
                    "name": "Transformation",
                    "properties": {
                        "streamingUnits": "[parameters('numberOfStreamingUnits')]",
                        "query": "[parameters('query')]"
                    }
                },
                "jobStorageAccount": "[if(equals(parameters('contentStoragePolicy'), 'SystemAccount'), json('null'), parameters('jobStorageAccount'))]"
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
            "apiVersion": "2021-10-01-preview",
            "name": "[format('{0}/{1}', parameters('StreamAnalyticsName'), parameters('inputName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('StreamAnalyticsName'))]"
            ],
            "properties": {
                "type": "Stream",
                "datasource": {
                    "type": "Microsoft.EventHub/EventHub",
                    "properties": {
                        "consumerGroupName": "[parameters('inputConsumerGroupName')]",
                        "eventHubName": "[parameters('inputEventHubName')]",
                        "serviceBusNamespace": "[parameters('serviceBusNamespace')]",
                        "authenticationMode": "Msi"
                    }
                },
                "compression": {
                    "type": "GZip"
                },
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8"
                    }
                }
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs/outputs",
            "apiVersion": "2021-10-01-preview",
            "name": "[format('{0}/{1}', parameters('StreamAnalyticsName'), parameters('outputNameOne'))]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('StreamAnalyticsName'))]"
            ],
            "properties": {
                "datasource": {
                    "type": "Microsoft.EventHub/EventHub",
                    "properties": {
                        "propertyColumns": [],
                        "eventHubName": "[parameters('outputEventHubName')]",
                        "serviceBusNamespace": "[parameters('serviceBusNamespace')]",
                        "authenticationMode": "Msi"
                    }
                },
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8",
                        "format": "Array"
                    }
                }
            }
        },
        {
            "type": "Microsoft.StreamAnalytics/streamingjobs/outputs",
            "apiVersion": "2021-10-01-preview",
            "name": "[format('{0}/{1}', parameters('StreamAnalyticsName'), parameters('outputNameTwo'))]",
            "dependsOn": [
                "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('StreamAnalyticsName'))]"
            ],
            "properties": {
                "datasource": {
                    "type": "Microsoft.Storage/Blob",
                    "properties": {
                        "storageAccounts": [
                            {
                                "accountName": "[parameters('dataLakeStorageAccount')]"
                            }
                        ],
                        "container": "[parameters('containerStorageAccount')]",
                        "pathPattern": "raw",
                        "dateFormat": "yyyy/MM/dd",
                        "timeFormat": "HH",
                        "authenticationMode": "Msi"
                    }
                },
                "serialization": {
                    "type": "Json",
                    "properties": {
                        "encoding": "UTF8",
                        "format": "LineSeparated"
                    }
                }
            }
        }
    ]
}