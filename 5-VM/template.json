{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineName": {
      "type": "string",
      "defaultValue": "sogeti-vm-tcc-brandreputation-d",
      "metadata": {
        "description": "Specifies the VM resource name."
      }
    },
    "virtualMachineComputerName": {
      "type": "string",
      "defaultValue": "sogeti-vm-tcc-b",
      "maxLength": 15,
      "metadata": {
        "description": "Specifies the VM host name."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Specifies the location of the VM."
      }
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2019-Datacenter",
      "allowedValues": [
        "2019-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_B2s",
      "metadata": {
        "description": "Size of the VM."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Specifies a username for the Virtual Machine."
      }
    },
    "adminPassword": {
        "type": "secureString",
        "metadata": {
          "description": "Specifies a password for the Virtual Machine."
      }
    },
    "existingVirtualNetworkName": {
      "type": "string",
      "defaultValue": "sogeti-vnet-brandreputation-d",
      "metadata": {
        "description": "Name of the existing Virtual Network."
      }
    },
    "virtualNetworkResourceGroup": {
      "type": "string",
      "defaultValue": "sogeti-platform-brandreputation-d",
      "metadata": {
        "description": "Resource group of the VNet."
      }
    },
    "existingSubnetName": {
      "type": "string",
      "defaultValue": "default",
      "metadata": {
        "description": "Existing subnet Name."
      }
    },
    "existingNSGName": {
      "type": "string",
      "defaultValue": "sogeti-nsg-tcc-brandreputation-d",
      "metadata": {
        "description": "Add an existing NSG name."
      }
    },
    "osDiskName": {
      "type": "string",
      "defaultValue": "sogeti-datadisk-tcc-OsDisk-1",
      "metadata": {
        "description": "Name of the VM disk."
      }
    },
    "osDiskType": {
      "type": "string",
      "defaultValue": "StandardSSD_LRS",
      "allowedValues": [
        "Premium_LRS",
        "StandardSSD_LRS",
        "StandardHDD_LRS",
        "Premium_ZRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "OS Disk type"
      }
    },
    "osDiskDeleteOption": {
      "type": "string",
      "defaultValue": "Delete",
      "allowedValues": [
        "Detach",
        "Delete"
      ],
      "metadata": {
        "description": "Delete the Disk with the VM or Detach it."
      }
    },
    "NICName": {
      "type": "string",
      "defaultValue": "sogeti-nic-tcc-brandreputation-d",
      "metadata": {
        "description": "Name of the Network Interface."
      }
    },
    "NICDeleteOption": {
      "type": "string",
      "defaultValue": "Detach",
      "allowedValues": [
        "Detach",
        "Delete"
      ],
      "metadata": {
        "description": "Delete the Network Interface with the VM or Detach it."
      }
    },
    "existingPIPName": {
      "type": "string",
      "defaultValue": "sogeti-pip-tcc-brandreputation-d-we",
      "metadata": {
        "description": "Name of the existing Public IP."
      }
    },
    "tagDisplayName": {
      "type": "string",
      "defaultValue": "PIP",
      "metadata": {
        "description": "Tag for the Display Name."
      }
    },
    "tagEnvironmentType": {
      "type": "string",
      "defaultValue": "DEV",
      "metadata": {
        "description": "Tag for the Environment Type."
      }
    },
    "tagProjectName": {
      "type": "string",
      "defaultValue": "Brand Reputation Prototype",
      "metadata": {
        "description": "Tag for the Project Name."
      }
    },
    "tagBillingIdentifier": {
      "type": "string",
      "defaultValue": "SogetiLab",
      "metadata": {
        "description": "Tag for the Billing Identifier."
      }
    }
  },
  "variables": {    
    "vnetId": "[resourceId(parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks',parameters('existingVirtualNetworkName'))]",
    "subnetId": "[concat(variables('vnetId'),'/subnets/',parameters('existingSubnetName'))]",
    "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('existingNSGName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('NICName')]",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "tags": {
        "DisplayName": "[parameters('tagDisplayName')]",
        "EnvironmentType": "[parameters('tagEnvironmentType')]",
        "ProjectName": "[parameters('tagProjectName')]",
        "BillingIdentifier": "[parameters('tagBillingIdentifier')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAddress": "10.0.0.4",
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('existingPIPName'))]"
              },
              "subnet": {
                "id": "[variables('subnetId')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableAcceleratedNetworking": false,
        "enableIPForwarding": true,
        "networkSecurityGroup": {
          "id": "[variables('nsgId')]"
        }
      },
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', parameters('existingPIPName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks/', parameters('existingVirtualNetworkName'))]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-04-01",
      "name": "[parameters('virtualMachineName')]",
      "location": "[parameters('location')]",
      "tags": {
        "DisplayName": "[parameters('tagDisplayName')]",
        "EnvironmentType": "[parameters('tagEnvironmentType')]",
        "ProjectName": "[parameters('tagProjectName')]",
        "BillingIdentifier": "[parameters('tagBillingIdentifier')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces/', parameters('NICName'))]"
      ],
      "zones": [
        "1"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineComputerName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "enableAutomaticUpdates": true,
            "provisionVmAgent": true,
            "patchSettings": {
              "enableHotpatching": false,
              "patchMode": "AutomaticByOS"
            }
          }
        },
        "storageProfile": {
            "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('windowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name":"[parameters('osDiskName')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('osDiskType')]"
            },
            "deleteOption": "[parameters('osDiskDeleteOption')]"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('NICName'))]",
              "properties": {
                "deleteOption": "[parameters('NICDeleteOption')]"
              }
            }
          ]
        }
      }
    }
  ]
}